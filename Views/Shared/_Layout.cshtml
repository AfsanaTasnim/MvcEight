<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Student Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Students", "Students", "Home")</li>
                    <li>@Html.ActionLink("Teachers", "Teachers", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">All Notices<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Exams", "Index", "Exam")</li>
                            <li>@Html.ActionLink("Holidays", "Index", "Holiday")</li>
                            <li>@Html.ActionLink("Events", "Index", "Event")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Results<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("ClassOnes", "ClassOne", "Home")</li>
                            <li>@Html.ActionLink("ClassTwos", "Index", "ClassTwo")</li>
                            <li>@Html.ActionLink("ClassThrees", "Index", "ClassThree")</li>
                            <li>@Html.ActionLink("ClassFours", "Index", "ClassFour")</li>
                            <li>@Html.ActionLink("ClassFives", "Index", "ClassFive")</li>
                            <li>@Html.ActionLink("ClassSixs", "Index", "ClassSix")</li>
                            <li>@Html.ActionLink("ClassSevens", "Index", "ClassSeven")</li>
                            <li>@Html.ActionLink("ClassEights", "Index", "ClassEight")</li>
                            <li>@Html.ActionLink("ClassNines", "Index", "ClassNine")</li>
                            <li>@Html.ActionLink("ClassTens", "Index", "ClassTen")</li>
                        </ul>
                    </li>
                    
                </ul>

          
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - School Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
